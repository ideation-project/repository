<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:orientation="horizontal"
    android:paddingHorizontal="18dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="8dp"

    >

    <TextView
        android:id="@+id/tv_name_sender"
        android:layout_width="wrap_content"
        android:maxWidth="200dp"
        android:minWidth="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/con_chat_sender"
        tools:text="tes tes"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_chat_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:background="@drawable/sender_chat_bubble"
        android:paddingVertical="10dp"
       app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_sender"
        >



        <TextView
            android:id="@+id/tv_chat_sender"
            android:layout_width="wrap_content"
            android:maxWidth="200dp"
            android:minWidth="30dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="tes teks" />




    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_name_mine"
        android:layout_width="wrap_content"
        android:maxWidth="200dp"
        android:minWidth="30dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/con_chat_mine"
        tools:text="tes tes"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_chat_mine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:paddingHorizontal="15dp"
        android:background="@drawable/mine_chat_bubble"
        android:paddingVertical="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_mine"
        >




        <TextView
            android:id="@+id/tv_chat_mine"
            android:layout_width="wrap_content"
            android:maxWidth="200dp"
            android:minWidth="30dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:ellipsize="end"
            android:maxLines="10"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="tes tes" />




    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>